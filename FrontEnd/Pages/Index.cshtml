    //<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="~/js/HomeController.js"></script>
</head>
    <body>
        <div ng-view></div>

        <div ng-controller="HomeController">
            <h1>Employee Management System</h1>
            <table class="table" style="margin-top:50px;">
                <thead>
                    <tr>
                        <th scope="col">EmployeeId</th>
                        <th scope="col">Firstname</th>
                        <th scope="col">Lastname</th>
                        <th scope="col">Designation</th>
                        <th scope="col">Age</th>
                        <th scope="col">Salary</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Operations</th>
                    </tr>
                </thead>
                <tbody ng-repeat="m in EmployeeManagement">
                    <tr>
                        <td>
                            <span ng-hide="m.EditMode">{{m.employeeId}}</span>
                            <input type="text" ng-model="m.employeeId" ng-show="m.EditMode" />
                        </td>
                        <td>
                            <span ng-hide="m.EditMode">{{m.firstName}}</span>
                            <input type="text" ng-model="m.firstName" ng-show="m.EditMode" />
                        </td>
                        <td>
                            <span ng-hide="m.EditMode">{{m.lastName}}</span>
                            <input type="text" ng-model="m.lastName" ng-show="m.EditMode" />
                        </td>
                        <td>
                            <span ng-hide="m.EditMode">{{m.designation}}</span>
                            <input type="text" ng-model="m.designation" ng-show="m.EditMode" />
                        </td>
                        <td>
                            <span ng-hide="m.EditMode">{{m.age}}</span>
                            <input type="text" ng-model="m.age" ng-show="m.EditMode" />
                        </td>
                        <td>
                            <span ng-hide="m.EditMode">{{m.salary}}</span>
                            <input type="text" ng-model="m.salary" ng-show="m.EditMode" />
                        </td>
                        <td>
                            <span ng-hide="m.EditMode">{{m.gender}}</span>
                            <input type="text" ng-model="m.gender" ng-show="m.EditMode" />
                        </td>
                        <td>
                            <a class="Edit" href="javascript:;" ng-hide="m.EditMode" ng-click="Edit($index)">Edit</a>
                            <a class="Update" href="javascript:;" ng-show="m.EditMode" ng-click="Update(item)">Update</a>
                            <a class="Cancel" href="javascript:;" ng-show="m.EditMode" ng-click="Delete(m.EmpId)">Delete</a>
                            <a href="javascript:;" ng-hide="m.EditMode" ng-click="Cancel(m.EmpId)">Cancel</a>
                        </td>
                    </tr>
                </tbody>
            </table>
            <form style=" margin-top:100px">
                <table>
                    <tr>
                        <td>Firstname </td>
                        <td><input type="text" name="title" ng-model="Firstname" required /></td>
                    </tr>
                    <tr>
                        <td>Lastname</td>
                        <td> <input type="text" name="title" ng-model="Lastname" required /></td>
                    </tr>
                    <tr>
                        <td>Designation</td>
                        <td> <input type="text" name="title" ng-model="Designation" required /></td>
                    </tr>
                    <tr>
                        <td>Age</td>
                        <td> <input type="text" name="title" ng-model="Age" required /></td>
                    </tr>
                    <tr>
                        <td>Salary</td>
                        <td> <input type="text" name="title" ng-model="Salary" required /></td>
                    </tr>
                    <tr>
                        <td>Gender</td>
                        <td>   <input type="text" name="title" ng-model="Gender" required /></td>
                    </tr>
                </table><br />
            </form>
            <button class="btn btn-light" ng-click="Add()">Adddata</button>
        </div>
</body>
</html>
